<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ViewProfile</title> <!-- Đổi tiêu đề thành ViewProfile -->

    <!-- custom css link -->
    <link rel="stylesheet" href="/stylesheets/stylehome.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css"
        integrity="sha512-5A8nwdMOWrSz20fDsjczgUidUBR8liPYU+WymTZP1lmY9G6Oc7HlZv156XqnsgNUzTyMefFTcsFH/tnJE/+xBg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- google font link -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet">

    <!-- jQuery library -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body class="light-theme">

    <!-- HEADER -->
    <header>
        <div class="container">
            <nav class="navbar">
                <div class="flex-wrapper">
                    <ul class="desktop-nav">
                        <li><a href="/adminhome" class="nav-link">HOME</a></li>
                        <li>
                            <a href="/adminhome/user" class="nav-link">User</a>
                        </li>
                
                        <li>
                            <a href="/adminhome/Register" class="nav-link">Create User</a>
                        </li>
                
                        <li>
                            <a href="/adminhome/ViewProfile" class="nav-link1">View Profile</a>
                        </li>
                
                        <li>
                            <a href="/adminhome/request" class="nav-link">request</a>
                        </li>
                        <li>
                            <a href="/adminhome/timesheet" class="nav-link">Timesheet</a>
                        </li>
                
                        <li>
                            <a href="#Reward" class="nav-link">Reward</a>
                        </li>
                        <li>
                            <a href="#Strava" class="nav-link">Strava</a>
                        </li>
                    </ul>
                    <a href="/" class="button1">
                        <h1>Logout</h1>
                    </a>
                </div>
            </nav>
        </div>
    </header>

    <main>
        <div>
            <section id="hero">
                <div class="container">
                    <div class="searchwrapper">
                        <div class="searchbox">
                            <div class="row column4">
                                <div class="col-md-5">
                                    <input type="text" class="form-control search-input"
                                        placeholder="Search by Keywords...">
                                </div>
                                <div class="col-md-3">
                                    <select class="form-control category">
                                        <option value="">Category</option>
                                        <option value="citizenId">Citizen ID</option>
                                        <option value="phone">Phone</option>
                                        <option value="name">Name</option>
                                    </select>
                                </div>
                                <div class="col-md-1">
                                    <button type="button" class="btn btn-primary btn-search">Search</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div>
            <div class="table-wrapper">
                <div class="title">
                    <h1>List of Profiles</h1> <!-- Đổi tiêu đề bảng thành List of Profiles -->
                </div>
                <table id="profileTable" class="fl-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Employee ID</th>
                            <th>Name</th>
                            <th>DOB</th>
                            <th>Gender</th>
                            <th>Citizen ID</th>
                            <th>Tax Code</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Bank Account</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% listUser.forEach(function(user) { %>
                            <tr>
                                <td>
                                    <%= user.id %>
                                </td>
                                <td>
                                    <%= user.employeeId %>
                                </td>
                                <td>
                                    <%= user.name %>
                                </td>
                                <td>
                                    <%= user.dob %>
                                </td>
                                <td>
                                    <%= user.gender %>
                                </td>
                                <td>
                                    <%= user.citizenId %>
                                </td>
                                <td>
                                    <%= user.taxCode %>
                                </td>
                                <td>
                                    <%= user.address %>
                                </td>
                                <td>
                                    <%= user.phone %>
                                </td>
                                <td>
                                    <%= user.email %>
                                </td>
                                <td>
                                    <%= user.bankAccount %>
                                </td>
                                <td>
                                    <a href="/adminhome/ViewProfile/SearchUser/<%= user.id %>" class="button">
                                        <button>Edit</button>
                                    </a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
                <div class="pagination-container">
                    <button id="previous" class="btn btn-primary">Previous</button>
                    <span>Page <span id="currentPage">1</span></span>
                    <button id="next" class="btn btn-primary">Next</button>
                </div>
            </div>
        </div>
    </main>

    <!-- Script to handle the click event -->
    <script>
        $(document).ready(function () {
            $('.btn-search').on('click', function () {
                var keyword = $('.search-input').val();
                var category = $('.category').val();
                $.ajax({
                    url: '/adminhome/search',
                    method: 'GET',
                    data: { keyword: keyword, category: category },
                    success: function (data) {
                        $('#profileTable tbody').html(data);
                        $('#currentPage').text(1);
                        updatePaginationButtons(1);
                    },
                    error: function (err) {
                        console.error('Error searching profiles:', err);
                    }
                });
            });

            $('.delete-form button').click(function (event) {
                event.preventDefault();
                var form = $(this).closest('form');
                if (confirm("Are you sure you want to delete this profile?")) {
                    form.submit();
                }
            });

            var itemsPerPage = 10;
            var currentPage = 1;
            var totalPages = 0;

            function updatePaginationButtons(current) {
                $('#previous').prop('disabled', current === 1);
                $('#next').prop('disabled', current === totalPages);
            }

            function updatePagination() {
                var startIndex = (currentPage - 1) * itemsPerPage;
                var endIndex = startIndex + itemsPerPage;
                var currentItems = listProfiles.slice(startIndex, endIndex);
                renderTable(currentItems);
                $('#currentPage').text(currentPage);
                updatePaginationButtons(currentPage);
            }

            function renderTable(data) {
                var html = '';
                data.forEach(function (profile) {
                    html += '<tr>';
                    html += '<td>' + profile.employeeId + '</td>';
                    html += '<td>' + profile.name + '</td>';
                    html += '<td>' + profile.dob + '</td>';
                    html += '<td>' + profile.gender + '</td>';
                    html += '<td>' + profile.citizenId + '</td>';
                    html += '<td>' + profile.taxCode + '</td>';
                    html += '<td>' + profile.address + '</td>';
                    html += '<td>' + profile.phone + '</td>';
                    html += '<td>' + profile.email + '</td>';
                    html += '<td>' + profile.bankAccount + '</td>';
                    html += '</tr>';
                });
                $('#profileTable tbody').html(html);
            }

            $('#previous').click(function () {
                if (currentPage > 1) {
                    currentPage--;
                    updatePagination();
                }
            });

            $('#next').click(function () {
                if (currentPage < totalPages) {
                    currentPage++;
                    updatePagination();
                }
            });
        });
    </script>

</body>

</html>