<body class="light-theme">

    <!-- <!- - #HEADER -> -->


        <header>

            <div class="container">

                <nav class="navbar">


                    <div class="flex-wrapper">

                        <ul class="desktop-nav">

                            <li>
                                <a href="/adminhome" class="nav-link">Home</a>
                            </li>

                            <li>
                                <a href="/adminhome/Register" class="nav-link">Create User</a>
                            </li>

                            <li>
                                <a href="/adminhome/ViewProfile" class="nav-link">View Profile</a>
                            </li>

                            <li>
                                <a href="#contact" class="nav-link">Contact</a>
                            </li>

                        </ul>

                        <a href="/Login" class="button1">
                            <h1>Login</h1>
                        </a>
                    </div>

                </nav>

            </div>

        </header>

        <main>

            <div>
                <div class="table-wrapper">

                    <div class="title">
                        <h1>List User</h1>
                    </div>
                    <table class="fl-table">

                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tài khoản</th>
                                <th>Mật khẩu</th>
                                <th>Loại tài khoản</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>


                            <% for (let i=0; i < listusers.length; i++) { %>
                                <tr>
                                    <td>
                                        <%= listusers[i].id_accounts %>
                                    </td>
                                    <td>
                                        <%= listusers[i].username %>
                                    </td>
                                    <td>
                                        <%= listusers[i].password_hash %>
                                    </td>
                                    <td>
                                        <%= listusers[i].role %>
                                    </td>
                                    <td>
                                        <a href="/AdminHome/edit_user/<%= listusers[i].id %>" class="button1">
                                            <button>Edit</button>
                                        </a>
                                        <form action="/AdminHome/delete_user/<%= listusers[i].id %>" method="post">
                                            <button>Delete</button></form>

                                    </td>
                                </tr>
                                <% } %>

                        <tbody>
                    </table>
                </div>
            </div>




        </main>

